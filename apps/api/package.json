{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "build": "dotenv -e ../../.env -c -- nest build",
    "start": "dotenv -e ../../.env -c -- nest start",
    "dev": "dotenv -e ../../.env -c -- nest start --watch",
    "start:debug": "dotenv -e ../../.env -c -- nest start --debug --watch",
    "start:prod": "dotenv -e ../../.env -c -- node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "dotenv -e ../../.env.test -c -- jest",
    "generate": "dotenv -e ../../.env -c -- drizzle-kit generate && cd ../..",
    "migrate": "dotenv -c -e ../../.env -- drizzle-kit migrate ",
    "migrate:test": "dotenv -c -e ../../.env.test -- drizzle-kit migrate",
    "studio": "drizzle-kit studio",
    "test:watch": "dotenv -e ../../.env.test -c -- jest --watch",
    "test:cov": "dotenv -e ../../.env.test -c -- jest --coverage",
    "test:debug": "dotenv -e ../../.env.test -c -- node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "seed": "dotenv -e ../../.env -c -- ts-node ./src/db/seed.ts",
    "seed:test": "dotenv -e ../../.env.test -c -- ts-node ./src/db/seed.ts",
    "test:e2e": "yarn migrate:test && yarn seed:test && dotenv -e ../../.env.test -c -- jest --config ./test/jest-e2e.json --coverage --runInBand --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.685.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.4.0",
    "@sentry/profiling-node": "^8.31.0",
    "@tournament-app/types": "*",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "drizzle-orm": "^0.31.2",
    "form-data": "^4.0.1",
    "handlebars": "^4.7.8",
    "mailgun.js": "^10.2.3",
    "mime-types": "^2.1.35",
    "passport-anonymous": "^1.0.1",
    "postgres": "^3.4.4",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "drizzle-kit": "^0.22.7",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverage": true,
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleDirectories": [
      "<rootDir>/../",
      "node_modules"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
